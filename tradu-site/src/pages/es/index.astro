---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Hero.astro";
import Features from "../../components/Features.astro";
import Cta from "../../components/CallToAction.astro";
import Services from "../../components/Services.astro";
import Faq from "../../components/FaqSection.astro";
import t from "../../i18n/es.json";

import heroImg from "../../assets/hero/hero-home.jpg";
import ctaBg from "../../assets/cta/cta-1.jpg";

const lang = "es";
---

<Layout
  title="TraduFlash | Traducciones profesionales"
  description="Traducciones profesionales certificadas: documentos legales, traducciones en vivo y traducción de páginas web. Atención en El Salvador."
  lang={lang}
  canonical="https://traduflashsv.com/es"
  t={t}
>
  <Hero
    copy={t.hero}
    imageSrc={heroImg}
    imageAlt="Traducción profesional de documentos legales"
    ctas={[
    {
      label: "Obtén tu cotización",
      href: "/es/cotizacion",
      kind: "internal",
      variant: "primary",
    },
    {
      label: "WhatsApp",
      href: "https://wa.me/50372356914",
      kind: "external",
      variant: "secondary",
      icon: "whatsapp",
    },
  ]}
  />


  <Features lang={lang} t={t} />
<Cta
  lang={lang}
  copy={t.ctaHero}
  backgroundImage={ctaBg}
/>

  <Services lang={lang} t={t} />
  <Faq lang={lang} t={t} />
</Layout>
