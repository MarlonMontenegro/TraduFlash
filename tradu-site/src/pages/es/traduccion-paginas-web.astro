---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Hero.astro";
import Cta from "../../components/CallToAction.astro";
import HowItWorks from "../../components/HowItWorks.astro";
import Benefits from "../../components/Benefits.astro";
import es from "../../i18n/es.json";

import heroImg from "../../assets/hero/hero-website-translation.jpg";
import ctaBg from "../../assets/cta/cta-2.jpg";
import benefitsImg from "../../assets/benefits/website-translation-corporate-benefits.jpg";

const lang = "es";
const t = es;
---


<Layout
  title="Traducción de páginas web | TraduFlash"
  description="Servicio profesional de traducción de páginas web para empresas. Adaptación lingüística y SEO en español e inglés."
  lang={lang}
  canonical="https://traduflashsv.com/es/traduccion-paginas-web"
  t={t}
>

  <Hero
    copy={t.webHero}
    imageSrc={heroImg}
    imageAlt="Traducción profesional de documentos legales"
  />

<Benefits
  title={t.webBenefits.title}
  items={t.webBenefits.items}
  imageSrc={benefitsImg}
  imageAlt="Beneficios de traducir tu página web"
/>


    <HowItWorks
    copy={t.webHowItWorks}
    />

  <Cta
    copy={t.ctaHero}
    backgroundImage={ctaBg}
  />

</Layout>
