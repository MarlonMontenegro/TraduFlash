---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Hero.astro";
import Cta from "../../components/CallToAction.astro";
import HowItWorks from "../../components/HowItWorks.astro";
import Benefits from "../../components/Benefits.astro";
import en from "../../i18n/en.json";

import heroImg from "../../assets/hero/hero-website-translation.jpg";
import ctaBg from "../../assets/cta/cta-2.jpg";
import benefitsImg from "../../assets/benefits/website-translation-corporate-benefits.jpg";

const lang = "en";
const t = en;
---

<Layout
  title="Website Translation Services | TraduFlash"
  description="Professional website translation services for businesses. Accurate localization, SEO-friendly translations, and bilingual expertise (English/Spanish)."
  lang={lang}
  canonical="https://traduflashsv.com/en/website-translation"
  t={t}
>
  <Hero
    copy={t.webHero}
    imageSrc={heroImg}
  imageAlt="Professional website translation services"
  />

<Benefits
  title={t.webBenefits.title}
  items={t.webBenefits.items}
  imageSrc={benefitsImg}
imageAlt="Benefits of professional website translation"
/>


    <HowItWorks
    copy={t.webHowItWorks}
    />

  <Cta
    copy={t.ctaHero}
    backgroundImage={ctaBg}
  />

</Layout>
