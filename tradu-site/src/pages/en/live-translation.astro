---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Hero.astro";
import Cta from "../../components/CallToAction.astro";
import HowItWorks from "../../components/HowItWorks.astro";
import Benefits from "../../components/Benefits.astro"
import ServiceLanguagesSection from "../../components/ServiceLanguages.astro";
import es from "../../i18n/en.json";

const lang = "en";
const t = es;

import heroLiveImg from "../../assets/hero/hero-live-interpretation.jpg";
import ctaLiveBg from "../../assets/cta/cta-1.jpg";
import liveBenefitsImg from "../../assets/benefits/professional-live-interpreter.jpg";

---

<Layout
  title="Live Interpretation Services | TraduFlash"
  description="Professional live interpretation services for meetings, events, and conferences. Experienced interpreters in Spanish and English."
  lang={lang}
  canonical="https://traduflashsv.com/en/live-translation"
  t={t}
>
  <Hero
    copy={t.liveHero}
    imageSrc={heroLiveImg}
    imageAlt="Professional live interpretation services"
  />
  <ServiceLanguagesSection lang={lang} t={t} />

  <Benefits
    title={t.liveBenefits.title}
    items={t.liveBenefits.items}
    imageSrc={liveBenefitsImg}
    imageAlt="Benefits of professional live interpretation"
  />

  
  <HowItWorks  copy={t.liveHowItWorks} />



  <Cta
    copy={t.liveCta}
    primaryHref="/en/quote"
    waNumber="50372356914"
    waMessage="Hello, I would like to request a quote for live interpretation services."
    backgroundImage={ctaLiveBg}
  />


</Layout>
