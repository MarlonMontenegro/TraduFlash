---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Hero.astro";
import Features from "../../components/Features.astro";
import Cta from "../../components/CallToAction.astro";
import Services from "../../components/Services.astro";
import Faq from "../../components/FaqSection.astro";
import t from "../../i18n/en.json";

import heroImg from "../../assets/hero/hero-home.jpg";
import ctaBg from "../../assets/cta/cta-1.jpg";

const lang = "en";
---

<Layout
  title="TraduFlash | Professional Translation Services ES / EN"
  description="Professional translation services: legal documents, live interpretation, and website translation. Fast, reliable, and bilingual (Spanish/English)."
  lang={lang}
  canonical="https://traduflashsv.com/en"
  t={t}
>
  <Hero
    copy={t.hero}
    imageSrc={heroImg}
    imageAlt="Professional legal document translation"
  />
  <Features lang={lang} t={t} />
<Cta
  lang={lang}
  copy={t.ctaHero}
  backgroundImage={ctaBg}
/>
  <Services lang={lang} t={t} />
  <Faq lang={lang} t={t} />
</Layout>
