---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import MisionVisonBlock from "../../components/aboutUs/MissionVisionBlock.astro";
import Certifications from "../../components/aboutUs/Certifications.astro";
import Cta from "../../components/CallToAction.astro";

import t from "../../i18n/en.json";
const lang = "en";

import heroLiveImg from "../../assets/hero/hero-about-us.jpg";
import ctaBg from "../../assets/cta/cta-2.jpg";

---

<Layout
  title="About Us | TraduFlash"
  description="Learn more about TraduFlash: our mission, vision, certifications, and our commitment to professional Spanish-English translation services."
  lang={lang}
  canonical="https://traduflashsv.com/en/about-us"
  t={t}
>
  <Hero
    copy={t.aboutUs.aboutUsHero}
    imageSrc={heroLiveImg}
    imageAlt="About TraduFlash translation services"
           ctas={[
    {
      label: "Get a Quote ",
      href: "/en/quote",
      kind: "internal",
      variant: "primary",
    },
    {
      label: "WhatsApp",
      href: "https://wa.me/50372356914",
      kind: "external",
      variant: "secondary",
      icon: "whatsapp",
    },
  ]}
  />

<MisionVisonBlock lang={lang} t={t} />

<Certifications lang={lang} t={t} />

  <Cta
    copy={t.ctaHero}
    backgroundImage={ctaBg}
  />

</Layout>
