---
interface Props {
  lang: "es" | "en";
  t: any;
}

const { lang, t } = Astro.props;

const documentLanguages = ["Español", "Inglés", "Francés", "Italiano", "Chino"];
const liveLanguages = ["Inglés", "Chino"];
const webLanguages = ["Español", "Inglés", "Francés"];
---

<section
  id="services"
  class="relative py-20 md:py-24 bg-[var(--background-color)]"
>
  <!-- DOTS BACKGROUND -->
  <div
    class="absolute inset-0 pointer-events-none
           [background-image:radial-gradient(#d4d4d4_1px,transparent_1px)]
           [background-size:18px_18px]
           opacity-40"
  ></div>

  <div class="relative max-w-6xl mx-auto px-6 text-center">
    <!-- TAGLINE -->
    <p
      class="fade-on-scroll text-xs font-semibold tracking-[0.18em]
             text-slate-500 uppercase"
    >
      {t.services.eyebrow}
    </p>

    <!-- TÍTULO -->
    <h2
      class="fade-on-scroll mt-3 text-3xl md:text-4xl lg:text-5xl font-bold
             leading-tight text-[var(--brand-black)]"
    >
      {t.services.titleLine1}
      <br />
      <span class="text-[var(--brand-primary)]">
        {t.services.titleLine2}
      </span>
    </h2>

    <!-- SUBTÍTULO -->
    <p
      class="fade-on-scroll mt-4 text-base md:text-lg text-slate-600
             max-w-3xl mx-auto leading-relaxed"
    >
      {t.services.subtitle}
    </p>
  </div>

<!-- GRID DE CARDS -->
<div
  class="relative mt-12 max-w-6xl mx-auto px-6 grid gap-6
         md:grid-cols-3"
>
  <!-- 1. Traducción de documentos -->
  <article
    class="fade-on-scroll group
           bg-white border border-slate-200 rounded-3xl p-7
           shadow-[0_18px_45px_rgba(15,23,42,0.04)]
           transition-all duration-200
           hover:-translate-y-1.5 hover:shadow-xl hover:border-[var(--brand-primary)]/40"
  >
    <p class="text-[11px] font-semibold tracking-wide text-[var(--brand-primary)]">
      {t.services.tags.documents}
    </p>

    <div class="mt-3 flex items-center gap-3">
      <div
        class="h-10 w-10 flex items-center justify-center rounded-2xl
               bg-[var(--brand-primary)]/10 text-[var(--brand-primary)]"
      >
        <!-- Icono documento -->
        <svg
          class="h-5 w-5"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.7"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <rect x="6" y="3" width="12" height="18" rx="2" />
          <path d="M9 8h6" />
          <path d="M9 12h5" />
          <path d="M9 16h3" />
        </svg>
      </div>

      <h3 class="text-[15px] md:text-base font-semibold text-[var(--brand-black)]">
        {t.services.cards.documents.title}
      </h3>
    </div>

    <p class="mt-3 text-sm text-slate-600 leading-relaxed">
      {t.services.cards.documents.text}
    </p>

    <!-- Idiomas documentos -->
    <div class="mt-5 flex flex-wrap gap-2">
      {documentLanguages.map((lng) => (
        <span
          class="inline-flex items-center rounded-full px-3 py-1
                 bg-slate-50 text-[11px] font-medium text-slate-700
                 border border-slate-200"
        >
          {lng}
        </span>
      ))}
    </div>
  </article>

  <!-- 2. Traducción en vivo -->
  <article
    class="fade-on-scroll group
           bg-white border border-slate-200 rounded-3xl p-7
           shadow-[0_18px_45px_rgba(15,23,42,0.04)]
           transition-all duration-200
           hover:-translate-y-1.5 hover:shadow-xl hover:border-[var(--brand-primary)]/40"
  >
    <p class="text-[11px] font-semibold tracking-wide text-[var(--brand-primary)]">
      {t.services.tags.live}
    </p>

    <div class="mt-3 flex items-center gap-3">
      <div
        class="h-10 w-10 flex items-center justify-center rounded-2xl
               bg-[var(--brand-primary)]/10 text-[var(--brand-primary)]"
      >
        <!-- Icono audífonos -->
        <svg
          class="h-5 w-5"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.7"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M4 12a8 8 0 0 1 16 0" />
          <rect x="3" y="10" width="4" height="8" rx="1.5" />
          <rect x="17" y="10" width="4" height="8" rx="1.5" />
          <path d="M7 19v1a3 3 0 0 0 3 3h1" />
        </svg>
      </div>

      <h3 class="text-[15px] md:text-base font-semibold text-[var(--brand-black)]">
        {t.services.cards.live.title}
      </h3>
    </div>

    <p class="mt-3 text-sm text-slate-600 leading-relaxed">
      {t.services.cards.live.text}
    </p>

    <!-- Idiomas live: SOLO inglés y chino -->
    <div class="mt-5 flex flex-wrap gap-2">
      {liveLanguages.map((lng) => (
        <span
          class="inline-flex items-center rounded-full px-3 py-1
                 bg-slate-50 text-[11px] font-medium text-slate-700
                 border border-slate-200"
        >
          {lng}
        </span>
      ))}
    </div>
  </article>

  <!-- 3. Traducción de páginas web -->
  <article
    class="fade-on-scroll group
           bg-white border border-slate-200 rounded-3xl p-7
           shadow-[0_18px_45px_rgba(15,23,42,0.04)]
           transition-all duration-200
           hover:-translate-y-1.5 hover:shadow-xl hover:border-[var(--brand-primary)]/40"
  >
    <p class="text-[11px] font-semibold tracking-wide text-[var(--brand-primary)]">
      {t.services.tags.web}
    </p>

    <div class="mt-3 flex items-center gap-3">
      <div
        class="h-10 w-10 flex items-center justify-center rounded-2xl
               bg-[var(--brand-primary)]/10 text-[var(--brand-primary)]"
      >
        <!-- Icono globo / web -->
        <svg
          class="h-5 w-5"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.7"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <circle cx="12" cy="12" r="7" />
          <path d="M5 12h14" />
          <path d="M12 5a11 11 0 0 1 3 7 11 11 0 0 1-3 7 11 11 0 0 1-3-7 11 11 0 0 1 3-7Z" />
        </svg>
      </div>

      <h3 class="text-[15px] md:text-base font-semibold text-[var(--brand-black)]">
        {t.services.cards.web.title}
      </h3>
    </div>

    <p class="mt-3 text-sm text-slate-600 leading-relaxed">
      {t.services.cards.web.text}
    </p>

    <!-- Idiomas web: español, inglés, francés -->
    <div class="mt-5 flex flex-wrap gap-2">
      {webLanguages.map((lng) => (
        <span
          class="inline-flex items-center rounded-full px-3 py-1
                 bg-slate-50 text-[11px] font-medium text-slate-700
                 border border-slate-200"
        >
          {lng}
        </span>
      ))}
    </div>
  </article>
</div>


</section>
