---
import { Facebook, Linkedin, Twitter } from "lucide-astro";

interface Props {
  lang: "en" | "es";
  t: any;
}

const { lang, t } = Astro.props;
const year = new Date().getFullYear();
---

<footer class="mt-20 border-t border-slate-200 bg-white/80">
  <div class="max-w-6xl mx-auto px-4 md:px-8 py-10 md:py-14">
    <div class="grid gap-10 md:grid-cols-3 lg:grid-cols-4">
      <!-- LOGO + TEXTO -->
      <div class="lg:col-span-2 space-y-4">
        <a href={lang === "es" ? "/es" : "/en"} class="inline-flex items-center gap-2">
          <img
            src="/logo.svg"
            alt="TraduFlash Logo"
            class="h-8 md:h-9 lg:h-10 w-auto object-contain"
          />
        </a>

        <p class="text-sm leading-relaxed text-slate-600 max-w-md">
          {t.footer.description}
        </p>

        <!-- SOCIALS -->
        <div class="space-y-2 pt-2">
          <p class="text-xs font-medium uppercase tracking-[0.18em] text-slate-500">
            {t.footer.socialsTitle}
          </p>

          <div class="flex items-center gap-2.5">
            <a
              href="#"
              aria-label="Facebook"
              class="inline-flex h-10 w-10 items-center justify-center rounded-full
                     border border-slate-200 bg-white/70 backdrop-blur
                     text-slate-700 shadow-sm transition-all duration-200
                     hover:-translate-y-0.5 hover:shadow-md
                     hover:border-[var(--brand-primary)]
                     hover:bg-[var(--brand-primary)] hover:text-white
                     focus:outline-none focus-visible:ring-2
                     focus-visible:ring-[var(--brand-primary)]
                     focus-visible:ring-offset-2"
            >
              <Facebook class="h-5 w-5" />
            </a>
            </a>

            <a
              href="#"
              aria-label="LinkedIn"
              class="inline-flex h-10 w-10 items-center justify-center rounded-full
                     border border-slate-200 bg-white/70 backdrop-blur
                     text-slate-700 shadow-sm transition-all duration-200
                     hover:-translate-y-0.5 hover:shadow-md
                     hover:border-[var(--brand-primary)]
                     hover:bg-[var(--brand-primary)] hover:text-white
                     focus:outline-none focus-visible:ring-2
                     focus-visible:ring-[var(--brand-primary)]
                     focus-visible:ring-offset-2"
            >
              <Linkedin class="h-5 w-5" />
            </a>
          </div>
        </div>
      </div>

      <!-- QUICK LINKS -->
      <div class="space-y-3">
        <h3 class="text-sm font-semibold text-slate-900">
          {t.footer.linksTitle}
        </h3>
        <ul class="space-y-2 text-sm text-slate-600">
          <li>
            <a
              href={lang === "es" ? "/es" : "/en"}
              class="hover:text-[var(--brand-primary)] transition"
            >
              {t.footer.linkHome}
            </a>
          </li>
          <li>
            <a href="#services" class="hover:text-[var(--brand-primary)] transition">
              {t.footer.linkServices}
            </a>
          </li>
          <li>
            <a href="#about" class="hover:text-[var(--brand-primary)] transition">
              {t.footer.linkAbout}
            </a>
          </li>
        </ul>
      </div>

      <!-- CONTACTO -->
      <div class="space-y-3">
        <h3 class="text-sm font-semibold text-slate-900">
          {t.footer.contactTitle}
        </h3>

        <div class="space-y-1 text-sm text-slate-600">
          <p>{t.footer.contactPhoneLabel}</p>
          <a
            href="tel:+50372356914"
            class="font-medium text-[var(--brand-black)] hover:text-[var(--brand-primary)] transition"
          >
            +503 72356914
          </a>
        </div>

        <div class="space-y-1 text-sm text-slate-600">
          <p>{t.footer.contactEmailLabel}</p>
          <a
            href="mailto:andrea.montenegro@traduflashsv.com"
            class="font-medium text-[var(--brand-black)] hover:text-[var(--brand-primary)] transition"
          >
            andrea.montenegro@traduflashsv.com
          </a>
        </div>

        <a
          href="https://wa.me/50372356914"
          target="_blank"
          rel="noreferrer"
          class="inline-flex items-center gap-2 mt-2 px-4 py-2 rounded-full
                 text-sm font-semibold bg-emerald-500 text-white
                 hover:bg-emerald-600 transition"
        >
          <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
            <path
              d="M12 2a9.9 9.9 0 0 0-8.44 15.21L3 22l4.93-1.52A9.9 9.9 0 1 0 12 2Zm0 2.25a7.64 7.64 0 0 1 7.63 7.63 7.6 7.6 0 0 1-11.35 6.55l-.36-.2-2.93.9.95-2.85-.23-.37A7.6 7.6 0 0 1 12 4.25Zm-3 3.6c-.17 0-.44.06-.68.31-.23.25-.9.88-.9 2.15 0 1.26.92 2.47 1.05 2.64.13.17 1.81 2.89 4.47 3.93 2.22.88 2.67.8 3.14.75.47-.06 1.54-.63 1.76-1.24.22-.61.22-1.13.16-1.24-.06-.11-.25-.18-.52-.32-.27-.13-1.6-.79-1.85-.88-.25-.09-.43-.13-.61.13-.18.25-.7.87-.86 1.05-.16.18-.32.2-.59.07-.27-.13-1.14-.42-2.17-1.34-.8-.71-1.34-1.59-1.5-1.86-.16-.27-.02-.42.11-.55.11-.11.27-.29.4-.43.13-.14.18-.25.27-.42.09-.18.04-.33-.02-.46-.06-.13-.61-1.48-.85-2.03-.22-.54-.45-.47-.62-.48Z"
            />
          </svg>
          {t.footer.whatsappCta}
        </a>
      </div>
    </div>
  </div>

  <!-- BARRA INFERIOR -->
  <div class="border-t border-slate-200 bg-white/90">
    <div class="max-w-6xl mx-auto px-4 md:px-8 py-4">
      <div
        class="flex flex-col md:flex-row items-start md:items-center
               justify-between gap-3 text-xs md:text-sm text-slate-500"
      >
        <span>Â© {year} TraduFlash. {t.footer.rights}.</span>
        <span>
          {t.footer.designedBy}{" "}
          <span class="font-semibold text-[var(--brand-primary)]">
            ForesightCode
          </span>
        </span>
      </div>
    </div>
  </div>
</footer>
