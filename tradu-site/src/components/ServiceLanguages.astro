---
interface LanguageCard {
  countryCode: string;
  shortCode: string;
  languageName: string;
  variant?: string;
  specialtiesTitle: string;
  specialties: string[];
}

interface Props {
  lang: "en" | "es";
  t: any;
}

const { lang, t } = Astro.props;

const content = t.liveLanguages;
const cards = content.cards as LanguageCard[];
---

<style is:global>
  /* Fade-up base */
  .fade-up {
    opacity: 0;
    transform: translateY(18px);
    transition: all 0.7s ease-out;
  }

  .fade-up.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<section class="relative py-20 px-4 bg-[var(--background-color)] overflow-hidden">
  <!-- Fondo de puntos -->
  <div
    class="absolute inset-0 z-0 opacity-[0.35]
           [background-size:18px_18px]
           [background-image:radial-gradient(#d8d8d8_1px,transparent_1px)]"
  ></div>

  <div class="relative z-10 max-w-6xl mx-auto">
    <!-- ENCABEZADO -->
    <div class="text-center mb-10 fade-up">
      <p
        class="inline-flex items-center gap-2 text-xs font-semibold tracking-[0.22em] uppercase text-[var(--brand-primary)]"
      >
        <span
          class="inline-flex items-center justify-center w-5 h-5 rounded-full border border-[var(--brand-primary)]/40"
        >
          <svg
            class="w-3 h-3 text-[var(--brand-primary)]"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
          >
            <circle cx="12" cy="12" r="9" stroke-width="1.7" />
            <path d="M3 12h18" stroke-width="1.5" />
            <path
              d="M12 3c2.5 2.7 3.7 5.7 3.7 9s-1.2 6.3-3.7 9c-2.5-2.7-3.7-5.7-3.7-9s1.2-6.3 3.7-9Z"
              stroke-width="1.5"
            />
          </svg>
        </span>
        {content.eyebrow}
      </p>

      <h2 class="mt-3 text-3xl md:text-4xl lg:text-5xl font-bold text-[var(--brand-black)]">
        {content.title}
      </h2>

      {content.subtitle && (
        <p class="mt-3 text-sm md:text-base text-slate-600 max-w-2xl mx-auto leading-relaxed">
          {content.subtitle}
        </p>
      )}
    </div>

    <!-- GRID -->
    <div class="grid gap-6 md:grid-cols-2">
      {cards.map((card) => (
        <article
          class="fade-up bg-white rounded-3xl border border-slate-200 shadow-sm
                 px-6 py-7 md:px-8 md:py-9 flex flex-col gap-6"
        >
          <header class="flex items-start justify-between">
            <div>
              <p class="text-xl md:text-2xl font-semibold text-[var(--brand-black)]">
                {card.countryCode}
              </p>
              <h3 class="mt-1 text-2xl md:text-3xl font-bold text-[var(--brand-black)]">
                {card.languageName}
              </h3>
              {card.variant && (
                <p class="mt-1 text-sm text-slate-600">{card.variant}</p>
              )}
            </div>

            <p class="text-3xl md:text-4xl font-extrabold text-[var(--brand-primary)]/15 leading-none">
              {card.shortCode}
            </p>
          </header>

          <hr class="border-slate-200" />

          <div>
            <div class="flex items-center gap-2 mb-3">
              <svg
                class="w-4 h-4 text-[var(--brand-primary)]"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
              >
                <path
                  d="M12 12a3 3 0 1 0-3-3 3 3 0 0 0 3 3Z"
                  stroke-width="1.7"
                />
                <path d="M5.5 20a4.5 4.5 0 0 1 9 0" stroke-width="1.7" />
                <path
                  d="M17 11.5a2.5 2.5 0 1 0-2-4"
                  stroke-width="1.5"
                />
                <path
                  d="M18.5 20a4.5 4.5 0 0 0-3.2-4.3"
                  stroke-width="1.5"
                />
              </svg>
              <span class="font-semibold text-sm text-[var(--brand-black)]">
                {card.specialtiesTitle}
              </span>
            </div>

            <ul class="space-y-1.5 text-sm md:text-base text-slate-700">
              {card.specialties.map((item) => (
                <li class="flex items-start gap-2">
                  <span class="mt-[6px] h-1.5 w-1.5 rounded-full bg-[var(--brand-primary)]"></span>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<script>
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          // Aparece → animar
          entry.target.classList.add("is-visible");
        } else {
          // Se va → quitar para que pueda re-animar
          entry.target.classList.remove("is-visible");
        }
      });
    },
    { threshold: 0.15 } // Detecta más natural al acercarse
  );

  document.querySelectorAll(".fade-up").forEach((el) => observer.observe(el));
</script>
