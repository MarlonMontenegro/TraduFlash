---
interface Props {
  lang?: "es" | "en";
  t: any;
}

const { lang = "es", t } = Astro.props;

const copy = t?.testimonials;
const items = copy?.items ?? [];
const indicatorTemplate =
  copy?.indicatorAria ??
  (lang === "en" ? "View testimonial {n}" : "Ver testimonio {n}");
---

<section
  class="py-20 bg-[var(--background-color)]"
  data-testimonials
  data-aos
>
  <div class="max-w-4xl mx-auto px-6">
    <!-- HEADER -->
    <header
      class="text-center max-w-3xl mx-auto mb-10"
      data-aos-item
    >
      <div
        class="inline-flex items-center justify-center px-4 py-1.5 rounded-full
               bg-[var(--brand-primary)]/10 text-[var(--brand-primary)]
               text-xs font-semibold tracking-wide uppercase mb-3"
      >
        {copy?.eyebrow}
      </div>

      <h2 class="text-2xl md:text-4xl font-bold text-[var(--brand-black)] leading-tight">
        {copy?.title}
      </h2>

      <p class="mt-3 text-sm md:text-base text-slate-600 leading-relaxed">
        {copy?.subtitle}
      </p>
    </header>

    <!-- SLIDES -->
    <div
      class="relative min-h-[210px] md:min-h-[230px]"
      data-aos-item
    >
      {items.map((item: any, index: number) => (
        <article
          class={`testimonial-slide absolute inset-0 flex flex-col items-center justify-center text-center transition-all duration-500
            ${index === 0
              ? "opacity-100 translate-y-0"
              : "opacity-0 translate-y-3 pointer-events-none"
            }`}
          data-index={index}
        >
          <p
            class="text-[1.3rem] md:text-[1.6rem] lg:text-[1.8rem]
                   leading-snug text-[var(--brand-black)]
                   max-w-3xl font-medium"
          >
            “{item.text}”
          </p>

          <div class="mt-6 text-xs md:text-sm text-slate-500">
            <p class="font-semibold text-[var(--brand-black)]">
              {item.name}
            </p>
            <p class="mt-0.5">
              {item.role}
            </p>
          </div>
        </article>
      ))}
    </div>

    <!-- INDICATORS -->
    <div
      class="mt-8 flex justify-center gap-4"
      data-aos-item
    >
      {items.map((_: any, index: number) => (
        <button
          type="button"
          class={`testimonial-indicator h-[2px] w-10 md:w-14 rounded-full transition
            ${index === 0
              ? "bg-[var(--brand-primary)]"
              : "bg-slate-300"
            }`}
          data-index={index}
          aria-label={indicatorTemplate.replace("{n}", String(index + 1))}
        ></button>
      ))}
    </div>
  </div>

  <!-- ================== STYLES AOS ================== -->
  <style>
    [data-aos-item] {
      opacity: 0;
      transform: translateY(14px) scale(0.995);
      filter: blur(6px);
      transition:
        opacity 700ms cubic-bezier(0.22, 1, 0.36, 1),
        transform 700ms cubic-bezier(0.22, 1, 0.36, 1),
        filter 700ms cubic-bezier(0.22, 1, 0.36, 1);
      will-change: opacity, transform, filter;
    }

    [data-aos].is-inview [data-aos-item] {
      opacity: 1;
      transform: translateY(0) scale(1);
      filter: blur(0);
    }

    [data-aos].is-inview [data-aos-item]:nth-child(1) {
      transition-delay: 0ms;
    }
    [data-aos].is-inview [data-aos-item]:nth-child(2) {
      transition-delay: 120ms;
    }
    [data-aos].is-inview [data-aos-item]:nth-child(3) {
      transition-delay: 240ms;
    }

    @media (prefers-reduced-motion: reduce) {
      [data-aos-item] {
        transition: none !important;
        opacity: 1 !important;
        transform: none !important;
        filter: none !important;
      }
    }
  </style>

  <!-- ================== SCRIPT ================== -->
  <script is:inline>
    const initTestimonialsCarousel = () => {
      const roots = document.querySelectorAll("[data-testimonials]");
      if (!roots.length) return;

      roots.forEach((root) => {
        const slides = root.querySelectorAll(".testimonial-slide");
        const indicators = root.querySelectorAll(".testimonial-indicator");
        if (!slides.length || !indicators.length) return;

        if (root.__carouselInterval) {
          clearInterval(root.__carouselInterval);
        }

        let current = 0;

        const setActive = (newIndex) => {
          slides.forEach((s, i) => {
            const active = i === newIndex;
            s.classList.toggle("opacity-100", active);
            s.classList.toggle("translate-y-0", active);
            s.classList.toggle("opacity-0", !active);
            s.classList.toggle("translate-y-3", !active);
            s.classList.toggle("pointer-events-none", !active);
          });

          indicators.forEach((b, i) => {
            const active = i === newIndex;
            b.classList.toggle("bg-[var(--brand-primary)]", active);
            b.classList.toggle("bg-slate-300", !active);
          });

          current = newIndex;
        };

        const next = () => setActive((current + 1) % slides.length);

        indicators.forEach((btn) => {
          btn.addEventListener("click", () => {
            const idx = Number(btn.dataset.index);
            if (!Number.isNaN(idx)) setActive(idx);

            clearInterval(root.__carouselInterval);
            root.__carouselInterval = setInterval(next, 6000);
          });
        });

        setActive(0);
        root.__carouselInterval = setInterval(next, 6000);
      });
    };

    const initAOS = () => {
      const sections = document.querySelectorAll("[data-aos]");
      if (!sections.length) return;

      const io = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            entry.target.classList.toggle(
              "is-inview",
              entry.isIntersecting
            );
          });
        },
        {
          threshold: 0.18,
          rootMargin: "0px 0px -10% 0px",
        }
      );

      sections.forEach((sec) => io.observe(sec));
    };

    document.addEventListener("DOMContentLoaded", () => {
      initTestimonialsCarousel();
      initAOS();
    });

    document.addEventListener("astro:page-load", () => {
      initTestimonialsCarousel();
      initAOS();
    });
  </script>
</section>
